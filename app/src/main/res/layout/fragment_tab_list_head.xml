<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainerFragmentList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/HorizontalScrollViewButtonListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ButtonListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_button_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textColor="@color/color5"
                android:layout_marginHorizontal="15dp"
                android:textSize="20sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="Produtor"/>

            <TextView
                android:id="@+id/textView_button_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textColor="@color/color5"
                android:layout_marginHorizontal="15dp"
                android:textSize="20sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="Tema"/>

            <TextView
                android:id="@+id/textView_button_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textColor="@color/color5"
                android:layout_marginHorizontal="15dp"
                android:textSize="20sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="Convidados"/>

            <TextView
                android:id="@+id/textView_button_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textColor="@color/color5"
                android:layout_marginHorizontal="15dp"
                android:textSize="20sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="Ano"/>
        </LinearLayout>
    </HorizontalScrollView>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@color/color3"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>